<%= form_with url: search_movie_path, method: :get do |form| %>
  <%= form.text_field :search_query, class: "form-control search-bar", placeholder: I18n.t("search_placeholder"), value: @searched_query, :required => true %>
  <%= form.submit I18n.t("search"), class: "btn btn-outline-primary me-2 search-button" %>
<% end %>